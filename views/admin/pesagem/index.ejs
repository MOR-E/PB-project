<%-include ('../../partials/header.ejs')%>
<%-include ('../../partials/navbar.ejs')%>

<div class="container">
    <hr>
    <h2>Tela de Pesagem</h2>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Número</th>
                <th>Data da pesagem</th>
                <th>Peso</th>
                <th>Ações</th>
            </tr>
        </thead>

        <tbody>
            <% cadastros.forEach(cadastro  => { %>
                <tr>
                    <th><%= cadastro.id %></th>
                    <th><%= cadastro.numero %></th>
                    <th><%= %></th>
                    <th><%= %></th>
                    <th>
                        <a href="/admin/pesagem/edit/<%= cadastro.id %>" class="btn btn-warning">Editar</a>
                        <form action="/pesagem/delete" method="POST" style="display: inline" onsubmit="confirmarDelecao(event, this)">
                            <button class="btn btn-danger">Deletar</button>
                            <input type="hidden" name="id" value="<%= cadastro.id %>">
                        </form>
                        <a href="/admin/pesagem/new/<%= cadastro.id %>" class="btn btn-success">Pesar</a>
                    </th>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<%-include ('../../partials/footer.ejs')%>

<script>
    function confirmarDelecao(event, form) {
        event.preventDefault();
        console.log("Formulario não enviado");

        var decision = confirm("Deseja mesmo deletar esse cadastro?");

        if(decision){
            form.submit();

        }else {
            
        }
    } 
</script>